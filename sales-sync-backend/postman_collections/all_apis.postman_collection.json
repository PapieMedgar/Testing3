          "request": { "method": "GET", "header": [{ "key":"Authorization","value":"Bearer {{token}}" }], "url": { "raw":"{{baseUrl}}/api/manager", "host":["{{baseUrl}}"], "path":["api","manager"] } }
        }
      ]
    },
    {
      "name": "Admin",
