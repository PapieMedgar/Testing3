        { "name": "Run setup (init)", "request": { "method":"POST", "header":[{"key":"Content-Type","value":"application/json"}], "body": { "mode":"raw", "raw":"{}" }, "url": { "raw":"{{baseUrl}}/api/setup/init", "host":["{{baseUrl}}"], "path":["api","setup","init"] } } }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
