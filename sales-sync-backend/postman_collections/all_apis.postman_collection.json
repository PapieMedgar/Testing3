        {
          "name": "List users",
          "request": { "method": "GET", "header": [{ "key":"Authorization","value":"Bearer {{token}}" }], "url": { "raw":"{{baseUrl}}/api/admin/users", "host":["{{baseUrl}}"], "path":["api","admin","users"] } }
        }
      ]
    },
    {
      "name": "Goals",
      "item": [
        {
          "name": "Get goals",
          "request": { "method": "GET", "header": [{ "key":"Authorization","value":"Bearer {{token}}" }], "url": { "raw":"{{baseUrl}}/api/goals", "host":["{{baseUrl}}"], "path":["api","goals"] } }
        },
        {
          "name": "Create goal",
          "request": { "method": "POST", "header": [{ "key":"Authorization","value":"Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"}], "body": { "mode":"raw", "raw":"{\n  \"title\": \"Sample Goal\",\n  \"goal_type\": \"daily_visits\",\n  \"target_value\": 10,\n  \"start_date\": \"2025-10-01\",\n  \"end_date\": \"2025-10-31\",\n  \"assignee_id\": 2\n}" }, "url": { "raw":"{{baseUrl}}/api/goals", "host":["{{baseUrl}}"], "path":["api","goals"] } }
        }
      ]
    },
    {
      "name": "Brands",
      "item": [
        { "name": "List brands", "request": { "method":"GET", "header":[{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw":"{{baseUrl}}/api/brands", "host":["{{baseUrl}}"], "path":["api","brands"] } } },
        { "name": "Create brand", "request": { "method":"POST", "header":[{"key":"Authorization","value":"Bearer {{token}}"},{"key":"Content-Type","value":"application/json"}], "body": { "mode":"raw", "raw":"{\"name\": \"Brand X\"}" }, "url": { "raw":"{{baseUrl}}/api/brands", "host":["{{baseUrl}}"], "path":["api","brands"] } } }
      ]
