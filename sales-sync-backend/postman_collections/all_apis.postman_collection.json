{
  "info": {
    "name": "Sales Sync Backend - All APIs",
    "_postman_id": "all-apis-collection-001",
    "description": "Postman collection for main backend API groups. Set environment variables `baseUrl` and `token` before running requests.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+27123456789\",\n  \"password\": \"agent123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
          }
        },
        {
          "name": "Get current user (me)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/me", "host": ["{{baseUrl}}"], "path": ["api","auth","me"] }
          }
        }
      ]
    },
    {
      "name": "Agent",
      "item": [
        {
          "name": "List shops",
          "request": { "method": "GET", "header": [{ "key":"Authorization","value":"Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/api/agent/shops", "host":["{{baseUrl}}"], "path":["api","agent","shops"] } }
        },
        {
          "name": "Create shop",
          "request": { "method": "POST", "header": [ {"key":"Authorization","value":"Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"} ], "body": { "mode":"raw", "raw": "{\n  \"name\": \"New Shop\",\n  \"address\": \"123 Main St\",\n  \"latitude\": -25.0,\n  \"longitude\": 28.0\n}" }, "url": { "raw":"{{baseUrl}}/api/agent/shops", "host":["{{baseUrl}}"], "path":["api","agent","shops"] } }
        }
      ]
    },
    {
