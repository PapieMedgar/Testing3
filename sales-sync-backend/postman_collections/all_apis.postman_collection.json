      ]
    },
    {
      "name": "Reports",
      "item": [
        { "name": "List latest reports", "request": { "method":"GET", "header":[{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw":"{{baseUrl}}/api/reports/latest", "host":["{{baseUrl}}"], "path":["api","reports","latest"] } } },
        { "name": "Generate daily xlsx", "request": { "method":"GET", "header":[{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw":"{{baseUrl}}/api/reports/daily_visits_xlsx", "host":["{{baseUrl}}"], "path":["api","reports","daily_visits_xlsx"] } } },
